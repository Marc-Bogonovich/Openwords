<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:background="#fff">
    
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent" android:layout_height="wrap_content">

        <include layout="@layout/actionbar_common" />
        
        <TextView android:id="@+id/wordsPage_TextView_nextWord"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/wordsPage_TextView_wordsPageTitle"
                  android:visibility="invisible"/>
        
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:padding="15dp"
                      android:gravity="center_vertical|center_horizontal"
                      android:orientation="vertical">
            <Button android:id="@+id/wordsPage_Button_getNextWords"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:background="@drawable/button_custom"
                    android:visibility="gone"/>

            <Button android:id="@+id/wordsPage_Button_searchWords"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="#404040" android:textSize="20sp"
                    android:background="@drawable/button_custom"/>

            <Button android:id="@+id/wordsPage_Button_searchWordSets"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:background="@drawable/button_custom"/>
                        
            <Button android:id="@+id/wordsPage_Button_viewMyWords"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:background="@drawable/button_custom"/>
                        
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:padding="10dp" android:layout_height="100dp"
                      android:orientation="horizontal"
                      android:visibility="gone">
            <View android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="2" />

            <ImageView android:id="@+id/wordsPage_ImageView_syncButton"
                       android:layout_width="0dp" android:layout_height="70dp"
                       android:layout_gravity="center" android:layout_weight="1"
                       android:adjustViewBounds="true"
                       android:contentDescription="@string/wordsPage_ImageButton_syncButton_desc"
                       android:src="@drawable/icon_wordpage_syncbutton_unpressed" />

            <View android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="2" />
        </LinearLayout>
        
    </LinearLayout>
    
</ScrollView>