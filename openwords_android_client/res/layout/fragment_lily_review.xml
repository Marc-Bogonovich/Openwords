<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    
    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="2"/>
    
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
        
        <RelativeLayout  android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_alignParentLeft="true"
                         android:layout_centerVertical="true">
        
            <include layout="@layout/lily_button_home"/>
             
        </RelativeLayout>
        
        <RelativeLayout  android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:layout_alignParentRight="true"
                         android:layout_centerVertical="true">
        
            <include layout="@layout/lily_button_sound"/>
            
        </RelativeLayout>
        
    </RelativeLayout>
    
        
    <com.openwords.ui.lily.lm.ViewMaxText android:id="@+id/frag_review_text1"
                                          android:layout_width="match_parent"
                                          android:layout_height="0dp"
                                          android:layout_weight="2"/>

        
    <com.openwords.ui.lily.lm.ViewMaxText android:id="@+id/frag_review_text2"
                                          android:layout_width="match_parent"
                                          android:layout_height="0dp"
                                          android:layout_weight="8"/>

        
    <com.openwords.ui.lily.lm.ViewMaxText android:id="@+id/frag_review_text3"
                                          android:layout_width="match_parent"
                                          android:layout_height="0dp"
                                          android:layout_weight="4"/>


    
    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="2"/>
    
</LinearLayout>