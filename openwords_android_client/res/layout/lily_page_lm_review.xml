<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_vertical">
        
        <ImageView  android:id="@+id/page_review_image1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_actionbar_others"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription=""/>
        
        <View android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>
    
        <RelativeLayout  android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:layout_margin="10dp">
        
            <include layout="@layout/lily_button_sound"/>
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>
    
    <com.openwords.ui.lily.lm.AutoResizeTextView android:id="@+id/page_review_text_tran"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="0dp"
                                                 android:layout_marginLeft="50dp"
                                                 android:layout_marginRight="50dp"
                                                 android:textColor="@color/main_app_color"
                                                 android:textSize="36sp"
                                                 android:gravity="center"
                                                 android:maxLines="3"
                                                 android:layout_weight="1"/>
    
    <com.openwords.ui.lily.lm.AutoResizeTextView android:id="@+id/page_review_text_problem"
                                                 android:layout_marginLeft="50dp"
                                                 android:layout_marginRight="50dp"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="0dp"
                                                 android:textColor="@color/main_app_color"
                                                 android:textSize="52sp"
                                                 android:gravity="center"
                                                 android:maxLines="3"
                                                 android:layout_weight="2"/>
    
    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>  
    
    <com.openwords.ui.lily.lm.AutoResizeTextView android:id="@+id/page_review_text_answer"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="0dp"
                                                 android:layout_marginLeft="50dp"
                                                 android:layout_marginRight="50dp"
                                                 android:textColor="@color/main_app_color"
                                                 android:textSize="36sp"
                                                 android:gravity="center"
                                                 android:maxLines="3"
                                                 android:layout_weight="1"/>
    
    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="2"/>          
    
</LinearLayout>