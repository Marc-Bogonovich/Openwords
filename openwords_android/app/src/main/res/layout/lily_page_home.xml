<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_app_color">

        <TextView
            android:id="@+id/page_home_root_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="#f5f5f5"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/page_home_root_image1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_actionbar_others" />

        <TextView
            android:id="@+id/page_home_root_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/page_home_root_image1"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </RelativeLayout>

    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        android:id="@+id/page_home_root_shadow1"
        style="@style/ms9_DefaultShadowStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_page_back"
        app:ms9_forceUseCompatShadow="true"
        app:ms9_shadowElevation="4dp"
        app:ms9_shadowTranslationZ="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/my_orange"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/page_home_root_button1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="12dp"
                    android:text="COURSES"
                    android:textColor="#f5f5f5"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/page_home_root_button2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="12dp"
                    android:text="WORDS"
                    android:textColor="#f5f5f5"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/my_orange"
                android:orientation="horizontal">

                <View
                    android:id="@+id/page_home_root_view1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff" />

                <View
                    android:id="@+id/page_home_root_view2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>


    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

    <com.openwords.learningmodule.MyPager
        android:id="@+id/page_home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>