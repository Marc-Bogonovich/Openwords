<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:orientation="horizontal"
                  android:layout_weight="1"
                  android:gravity="right">
        
        <ImageView android:id="@+id/act_multi_image1"
                   android:layout_width="wrap_content" 
                   android:layout_height="match_parent"
                   android:src="@drawable/ic_self_evaluate_audio"
                   android:contentDescription="voice"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:orientation="horizontal"
                  android:layout_weight="2"
                  android:padding="10dp">
        
        <TextView android:id="@+id/act_multi_text1"
                  android:layout_width="match_parent" 
                  android:layout_height="match_parent"
                  android:text="She loves my dog."
                  android:textSize="32sp"
                  android:gravity="bottom"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="4"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_area_drop">
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="4"
                  android:orientation="horizontal"
                  android:padding="10dp">
        
        <TextView android:id="@+id/act_multi_text_test1"
                  android:layout_width="wrap_content" 
                  android:layout_height="wrap_content"
                  android:text="狗"
                  android:textSize="32sp"
                  android:background="#cccccc"
                  android:layout_margin="10dp"
                  android:padding="3dp"/>
        
        <TextView android:id="@+id/act_multi_text_test2"
                  android:layout_width="wrap_content" 
                  android:layout_height="wrap_content"
                  android:text="她"
                  android:textSize="32sp"
                  android:background="#cccccc"
                  android:layout_margin="10dp"
                  android:padding="3dp"/>
        
    </LinearLayout>

</LinearLayout>
