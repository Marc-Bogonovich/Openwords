<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Hello, You can make a new word and send to our server:"/>
    
    <EditText android:id="@+id/act_main_edit1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:hint="Enter the language ID here"/>
    
    <EditText android:id="@+id/act_main_edit2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:hint="Enter the word spelling here"/>
    
    <Button android:id="@+id/act_main_button1" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Save The Word"
            android:layout_marginBottom="100dp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="And you also can load the words by giving a language ID:"/>
    
    <EditText android:id="@+id/act_main_edit3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:hint="Enter the language ID here"/>
    
    <Button android:id="@+id/act_main_button2" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Load words of this language from server"/>
    
    <Button android:id="@+id/act_main_button3" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Load words of this language from local database"/>
    
    
</LinearLayout>

